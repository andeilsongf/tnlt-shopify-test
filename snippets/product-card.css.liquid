.product-card {
  display: flex;
  flex-direction: column;
  gap: 21px;
  width: 100%;

  @media (width <= 767px) {
    gap: 12px;
  }

  .product-card__title {
    font-size: 22px;
    line-height: 27px;
    color: #191919;
    font-family: "ITC Benguiat Std";
  }

  .product-card__description {
    font-size: 18px;
    line-height: 22px;
    color: #555;
  }
}
