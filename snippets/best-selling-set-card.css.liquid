.best-selling-set-card {
  display: flex;
  flex-direction: column;

  .best-selling-set-card__image-wrapper {
    position: relative;
    .best-selling-set-card__badge {
      display: block;
      top: 1rem;
      left: 1rem;
      position: absolute;
      border: 1px solid #ffffff14;
      font-weight: 700;
      font-size: 1.5rem;
      line-height: 2.2rem;
      letter-spacing: 2%;
      text-align: center;
      color: #ffffff;
      text-transform: uppercase;
      padding: 6px 12px;
    }

    .best-selling-set-card__add-form {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      width: calc(100% - 1rem);
      bottom: 1rem;
      background: #fff;
      padding: 1.5rem 0;
      font-weight: 700;
      font-size: 1.8rem;
      line-height: 2.1rem;
      text-align: center;
      text-transform: uppercase;
      color: #000000;
      opacity: 0;
      pointer-events: all;
      transition: opacity 0.3s;
      cursor: pointer;

      .best-selling-set-card__add-btn {
        font-weight: 700;
        font-size: 1.8rem;
        line-height: 2.1rem;
        letter-spacing: 0%;
        text-align: center;
        color: #000000;
        pointer-events: all;
        transition: opacity 0.3s ease;
        cursor: pointer;
      }
    }

    &:hover .best-selling-set-card__add-form {
      display: block;
      opacity: 1;
      pointer-events: auto;
    }
  }

  .best-selling-set-card__info {
    margin-top: 1.3rem;
    display: flex;
    flex-direction: column;
    gap: 1.2rem;

    .best-selling-set-card__footer {
      display: flex;
      width: 100%;
      justify-content: space-between;
      align-items: flex-end;
      border-bottom: 1px solid #dddddd;
      padding-bottom: 1.2rem;

      .best-selling-set-card__title {
        font-family: "ITC Benguiat Std";
        font-weight: 500;
        font-size: 2rem;
        line-height: 2.7rem;
        letter-spacing: 3%;
        max-width: 150px;
      }

      .best-selling-set-card__price {
        font-weight: 400;
        font-size: 1.8rem;
        line-height: 100%;
        letter-spacing: 0%;
        text-transform: uppercase;
        color: #333333;
      }
    }

    .best-selling-set-card__reviews {
      display: flex;
      gap: 9px;
      align-items: center;

      .best-selling-set-card__stars {
        display: flex;
      }

      .best-selling-set-card__review-count {
        font-weight: 400;
        font-size: 1.6rem;
        line-height: 1.5rem;
        letter-spacing: 0%;
      }
    }
  }
}
