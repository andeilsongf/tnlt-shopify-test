.how-it-works-tlnt {
  display: flex;
  max-width: 144rem;
  margin: 8rem auto;
  padding: 0 6rem;
  width: 100%;
  justify-content: space-between;
  gap: 4.7rem;

  @media (width <= 767px) {
    flex-direction: column;
    padding: 0 2rem;
    gap: 3rem;
    margin-top: 4rem !important;
  }

  .how-it-works-tlnt__image-wrapper {
    width: 100%;

    .how-it-works-tlnt__image {
      object-fit: cover;
    }
  }

  .how-it-works-tlnt__content {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    .how-it-works-tlnt__title {
      font-size: 1.8rem;
      line-height: 1.5rem;
      font-family: "Roboto Condensed";
    }

    .how-it-works-tlnt__punchline {
      font-family: "Roseritta";
      font-weight: 700;
      font-size: 7rem;
      line-height: 7rem;
      letter-spacing: 3%;
      color: #191919;

      @media (width <= 767px) {
        font-size: 4rem;
        line-height: 4rem;
        margin: 1rem 0;
      }

      @media (768px <= width <= 1180px) {
        margin: 2rem 0;
      }
    }

    .how-it-works-tlnt__description {
      font-size: 1.8rem;
      line-height: 2.2rem;
    }

    .how-it-works-tlnt__steps {
      display: flex;
      flex-direction: column;
      gap: 3rem;

      @media (width <= 767px) {
        margin: 3rem 0;
      }

      @media (768px <= width <= 1180px) {
        margin: 3rem 0;
      }

      .how-it-works-tlnt__step-container {
        display: flex;
        align-items: flex-start;
        gap: 1.5rem;

        @media (width <= 767px) {
          align-items: stretch;
        }

        .how-it-works-tlnt__index {
          position: relative;
          min-width: 2.5rem;
          display: flex;
          flex-direction: column;
          align-items: center;
          height: 100%;

          @media (width <= 767px) {
            min-height: 100%;
            align-items: stretch;
            height: unset;
          }

          &::after {
            content: "";
            width: 0.05rem;
            height: calc(100% - 3.2rem);
            background-color: #2a4835;
            top: 3.2rem;
            left: 0;
            display: block;
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
          }

          span {
            font-size: 1.8rem;
            line-height: 1.5rem;
            font-weight: 700;
            color: #2a4835;
          }

          img {
            /* Estilos para a imagem do Ã­ndice */
          }
        }

        .how-it-works-tlnt__step-details {
          display: flex;
          flex-direction: column;
          gap: 1.6rem;

          .how-it-works-tlnt__step-title {
            font-family: "ITC Benguiat Std";
            font-size: 2.2rem;
            line-height: 2.1rem;
            letter-spacing: 3%;
            font-weight: 500;
          }

          .how-it-works-tlnt__step-description {
            font-size: 1.8rem;
            line-height: 2.3rem;
          }
        }
      }
    }

    .how-it-works-tlnt__cta {
      background: #2a4835;
      padding: 1.4rem 4.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      width: fit-content;
      color: #fff;
      border: 0.1rem solid #2a4835;
      font-weight: 700;
      font-size: 1.8rem;
      line-height: 2.1rem;
      transition: 0.3s;

      &:hover {
        background: #fff;
        border: 0.1rem solid #2a4835;
        color: #2a4835;
      }
    }
  }
}
