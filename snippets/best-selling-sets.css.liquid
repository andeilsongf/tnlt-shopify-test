      .swiper-wrapper {
        .swiper-slide {
        }
      }
    }

    .swiper-button-prev {
      @media (width <= 768px) {
        display: none;
      }
      &::after {
        display: none;
      }

      img {
      }
    }

    .swiper-button-next {
      @media (width <= 768px) {
        display: none;
      }
      &::after {
        display: none;
      }

      img {
      }
    }
  }
}
