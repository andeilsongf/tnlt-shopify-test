.best-selling-sets {
  display: flex;
  flex-direction: column;
  max-width: 144rem;
  margin: 0 auto;
  padding: 0 6rem;
  position: relative;

  @media (width <= 767px) {
    padding: 0 1.6rem;
  }

  .best-selling-sets__before {
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    min-width: 23.3rem;
    max-height: 23.3rem;
  }

  .best-selling-sets__after {
    position: absolute;
    top: 0;
    right: 0;
    z-index: -1;
    min-width: 23.3rem;
    max-height: 23.3rem;
  }

  .best-selling-sets__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 3.2rem;

    @media (width <= 767px) {
      margin-top: 3rem;
    }

    .best-selling-sets__subtitle {
      font-weight: 400;
      font-size: 1.8rem;
      line-height: 1.5rem;
      text-transform: uppercase;
      margin-bottom: 2.7rem;
      color: #333333;

      @media (width <= 767px) {
        text-align: left;
        width: 100%;
      }
    }

    .best-selling-sets__title {
      font-family: Roseritta;
      font-weight: 700;
      font-size: 7rem;
      line-height: 7rem;
      letter-spacing: 3%;
      text-align: center;
      max-width: 90.6rem;
      color: #191919;

      @media (width <= 767px) {
        font-size: 4rem;
        line-height: 4rem;
        text-align: left;
      }
    }
  }

  .best-selling-sets__cards {
    display: flex;
    justify-content: space-between;
    gap: 2.3rem;
    padding: 0 6rem;
    overflow: auto;
    position: relative;

    @media (width <= 767px) {
      padding: 0;
    }

