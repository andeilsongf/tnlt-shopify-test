.personal-inquiry-section {
  background-size: cover;
  background-position: top center;

  .personal-inquiry-section__container {
    max-width: 144rem;
    padding: 0 0 0 6rem;
    margin: 0 auto;
    display: flex;
    gap: 9.7rem;

    @media (width <= 767px) {
      padding: 0 1.6rem;
      flex-direction: column;
      gap: 3rem;
    }

    @media (768px <= width <= 1180px) {
      padding: 0 0 0 1.6rem;
      gap: 1rem;
    }

    .personal-inquiry-section__content {
      width: 100%;
      .personal-inquiry-section__eyebrow {
        font-weight: 400;
        font-size: 1.8rem;
        line-height: 1.5rem;
        letter-spacing: 0%;
        text-transform: uppercase;
        color: #fff;
        margin-bottom: 3.9rem;
        display: block;

        @media (width <= 767px) {
          margin-bottom: 1rem;
        }
      }

      .personal-inquiry-section__title {
        display: block;
        font-family: "Roseritta";
        font-size: 11rem;
        line-height: 10.5rem;
        letter-spacing: 3%;
        color: #fff;
        margin-bottom: 4.6rem;
        min-width: 65rem;

        @media (width <= 767px) {
          font-size: 6rem;
          line-height: 8rem;
          margin-bottom: 0;
          min-width: 100%;
        }

        @media (768px <= width <= 1180px) {
          font-size: 7rem;
          line-height: 7rem;
          min-width: 100%;
          word-break: normal;
        }
      }

      .personal-inquiry-section__description {
        max-width: 47rem;
        font-weight: 400;
        font-size: 1.6rem;
        line-height: 2.1rem;
        letter-spacing: 0%;
        color: #fff;
      }
    }

    .personal-inquiry-section__form-wrapper {
      width: 100%;
      background-color: #fff;
      padding: 4.3rem 6rem 4.4rem 4rem;

      @media (width <= 767px) {
        padding: 1.6rem 1rem;
      }

      .personal-inquiry-section__form {
        .personal-inquiry-section__form-row {
          display: flex;
          align-items: center;
          gap: 2.2rem;

          .personal-inquiry-section__form-group {
            display: flex;
            width: 100%;
            flex-direction: column;
            gap: 1.6rem;

            label {
              font-weight: 700;
              font-size: 1.6rem;
              line-height: 2.1rem;
              letter-spacing: 0%;
              text-transform: uppercase;
              color: #333;

              &.label-window {
                font-weight: 400;
                font-size: 1.8rem;
                line-height: 1.5rem;
                letter-spacing: 0%;
                text-transform: uppercase;
                color: #555;
                margin-bottom: 2.1rem;
                margin-top: 0.7rem;
              }
            }

            input {
              font-weight: 400;
              font-size: 1.6rem;
              line-height: 80%;
              letter-spacing: 0%;
              color: #555;
              padding-bottom: 1.5rem;
              border-bottom: 0.1rem solid #555;
              margin-bottom: 2.1rem;
              border-radius: 0;

              &:focus-visible {
                box-shadow: none;
              }
            }

            select {
              font-weight: 400;
              font-size: 1.6rem;
              line-height: 80%;
              letter-spacing: 0%;
              color: #555;
              padding-bottom: 1.5rem;
              border-bottom: 0.1rem solid #555;
              margin-bottom: 2.1rem;

              &:focus-visible {
                box-shadow: none;
              }
            }

            textarea {
              font-weight: 400;
              font-size: 1.6rem;
              line-height: 80%;
              letter-spacing: 0%;
              color: #555;
              padding-bottom: 1.5rem;
              border-bottom: 0.1rem solid #555;
              margin-bottom: 2.1rem;
              height: 9rem;
            }
          }
        }

        .personal-inquiry-section__submit {
          background: #2a4835;
          padding: 1.4rem 4.5rem;
          display: flex;
          align-items: center;
          justify-content: center;
          width: fit-content;
          color: #fff;
          border: 0.1rem solid #2a4835;
          font-weight: 700;
          font-size: 1.8rem;
          line-height: 2.1rem;
          transition: 0.3s;
          cursor: pointer;

          &:hover {
            background: #fff;
            border: 0.1rem solid #2a4835;
            color: #2a4835;
          }
        }
      }
    }
  }
}
