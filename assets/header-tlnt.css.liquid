/* Header Styles */
.header {
  position: sticky;
  top: 0;
  z-index: 50;
  transition: all 0.3s ease;
}

.header__logo-img {
  max-width: {{ section.settings.logo_width }}px;
}

/* Hero Styles */
.hero {
  background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('{{ section.settings.hero_image | image_url: width: 1500 }}');
  background-size: cover;
  background-position: center;
}

@media screen and (min-width: 750px) {
  .hero {
    min-height: 600px;
  }
}